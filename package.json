{
  "name": "test-theme",
  "version": "0.0.1",
  "description": "style guide demo",
  "main": "dist/index.css",
  "scripts": {
    "watch-sources": "watch -p \"./src/**/*.scss\" -c \"npm run compile-sources\"",
    "watch-styleguide": "documentjs -f -w",
    "serve": "browser-sync start --config bs-config.js",
    "start": "npm run watch-sources & npm run watch-styleguide & npm run serve",
    "compile-styleguide": "documentjs",
    "compile-sources": "node-sass -r --output dist src && postcss -c ./postcss-cli-config.json",
    "localdev-start": "npm run watch-sources"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.6.0",
    "browser-sync": "^2.18.5",
    "documentjs": "^0.4.4",
    "node-sass": "^4.1.1",
    "postcss": "^5.2.8",
    "postcss-cli": "^2.6.0",
    "postcss-discard-comments": "^2.0.4",
    "watch-cli": "^0.2.1"
  }
}
