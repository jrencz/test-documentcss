{
  "siteDefaults": {
    "static": "guide-theme",
    "templates": "guide-theme/templates"
  },
  "sites": {
    "styles": {
      "glob": "src/**/*.scss",
      "dest": "styleguide",
      "parent": "index"
    },
    "demos": {
      "templates": "pages/demos/templates",
      "glob": "pages/demos/**/*.{css,scss,md}",
      "dest": "demos",
      "parent": "demos"
    }
  }
}
